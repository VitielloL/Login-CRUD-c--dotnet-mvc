@model ProcessoSeletivo.Models.Usuario

<div id="confirmacao-exclusao" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Exclusão</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Você tem certeza que deseja excluir o usuário <strong>@Model.Nome</strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a class="btn btn-danger" id="btn-confirmar-exclusao" href="#">Confirmar Exclusão</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#confirmacao-exclusao').modal('show');

            $('#btn-confirmar-exclusao').on('click', function () {
                window.location.href = '@Url.Action("Excluir", "Usuario", new { id = Model.UsuarioId })';
            });
        });
    </script>
}
