@model ProcessoSeletivo.Models.Usuario

<!-- Adicione os links CSS necessários para o Bootstrap e Font Awesome -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="container mt-4">
    <h2>Detalhes do Usuário</h2>

    <dl class="row">
        <dt class="col-sm-3">Nome:</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Foto do Perfil:</dt>
        <dd class="col-sm-9">
            <img src="@Model.FotoPerfil" alt="Foto do Perfil" class="img-thumbnail" style="max-width: 100px;" />
        </dd>
    </dl>

    <div class="text-center">
        <a class="btn btn-primary" asp-action="Listar">
            <i class="fas fa-arrow-left"></i> Voltar para a Lista
        </a>
    </div>
</div>

<!-- Adicione os scripts JavaScript e Popper.js necessários para o Bootstrap -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
