@model ProcessoSeletivo.Models.Usuario

<!-- Adicione os links CSS necessários para o Bootstrap -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

<div class="container mt-4">
    <h2>Cadastrar Novo Usuário</h2>

    <form asp-action="Cadastrar" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Senha">Senha:</label>
            <input asp-for="Senha" type="password" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FotoPerfil">Foto do Perfil:</label>
            <input asp-for="FotoPerfil" type="file" class="form-control-file" />
            <span asp-validation-for="FotoPerfil" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>

    <div class="text-center mt-3">
        <a class="btn btn-secondary" asp-action="Listar">
            <i class="fas fa-arrow-left"></i> Voltar para a Lista
        </a>
    </div>
</div>

<!-- Adicione os scripts JavaScript e Popper.js necessários para o Bootstrap -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
