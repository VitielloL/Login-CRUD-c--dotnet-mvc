@model ProcessoSeletivo.Models.Usuario

<!-- Não inclua a declaração de layout para evitar herdar o layout padrão -->

<div class="container mt-4">
    <h2>Login</h2>

    @if (ViewBag.ErroLogin != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErroLogin
        </div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email">E-mail:</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Senha">Senha:</label>
            <input asp-for="Senha" type="password" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>

<!-- Adicione os scripts JavaScript e Popper.js necessários para o Bootstrap -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
